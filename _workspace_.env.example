# ========================================
# VHICL Pro - Environment Variables
# DigitalOcean Droplet Deployment
# ========================================

# Server Configuration
PORT=3000
NODE_ENV=production

# ========================================
# Scrapers Configuration
# ========================================

# Nexpart Scraper Credentials
NEXPART_USERNAME=your_nexpart_username
NEXPART_PASSWORD=your_nexpart_password

# Auto Labor Experts Scraper Credentials
AUTO_LABOR_USERNAME=your_auto_labor_username
AUTO_LABOR_PASSWORD=your_auto_labor_password

# Scraper Settings
SCRAPER_HEADLESS=true
SCRAPER_TIMEOUT=30000

# ========================================
# Email Configuration (SendGrid)
# ========================================

SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@vhiclpro.com
SENDGRID_FROM_NAME=VHICL Pro

# ========================================
# Voice Calling Configuration (VAPI)
# ========================================

VAPI_API_KEY=your_vapi_api_key
VAPI_PHONE_ID=your_vapi_phone_id
VAPI_PHONE_NUMBER=your_vapi_phone_number

# ========================================
# Shop Configuration
# ========================================

SHOP_NAME=Your Shop Name
SHOP_PHONE=555-123-4567
SHOP_ADDRESS=123 Main St, City, State ZIP
SHOP_EMAIL=contact@yourshop.com

# Pricing
LABOR_RATE=100
LABOR_MULTIPLIER=1.0
TAX_RATE=0.08
DIAGNOSTIC_FEE=50

# Business Hours
BUSINESS_HOURS_START=08:00
BUSINESS_HOURS_END=18:00
BUSINESS_DAYS=MONDAY,TUESDAY,WEDNESDAY,THURSDAY,FRIDAY

# ========================================
# ALEX Configuration
# ========================================

ALEX_ENABLED=true
ALEX_AUTO_CALL_STORES=true
ALEX_AUTO_ORDER_PARTS=true
ALEX_REQUIRE_APPROVAL=true

# Quote Selection Weights
ALEX_WEIGHT_PRICE=30
ALEX_WEIGHT_AVAILABILITY=25
ALEX_WEIGHT_DELIVERY=20
ALEX_WEIGHT_QUALITY=15
ALEX_WEIGHT_RELATIONSHIP=10

# ========================================
# Security Configuration
# ========================================

# CORS Configuration
ALLOWED_ORIGINS=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Database Configuration (if needed)
# ========================================

# MongoDB (optional)
# MONGODB_URI=mongodb://localhost:27017/vhiclpro

# PostgreSQL (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/vhiclpro

# ========================================
# Logging Configuration
# ========================================

LOG_LEVEL=info
LOG_FILE=/var/log/vhiclpro/server.log

# ========================================
# SSL Configuration (if using custom SSL)
# ========================================

# SSL_CERT_PATH=/etc/ssl/certs/vhiclpro.crt
# SSL_KEY_PATH=/etc/ssl/private/vhiclpro.key